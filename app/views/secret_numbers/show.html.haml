.container
	- if @secret_number == @chosen_number
		%h1 CONGRATS! YOU WON!
		%h3 The secret number was #{@secret_number}
		= image_tag "games/cat-wins.gif"
	- else
		%h1 Sorry, you lose...
		%h3 The secret number was #{@secret_number}
		= image_tag "games/loser.gif"
	%br
	= link_to "PLAY AGAIN", new_secret_number_path